{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./libs/codekoller-logger/src",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@app/codekoller-logger": ["libs/codekoller-logger/src"],
      "@app/codekoller-logger/*": ["libs/codekoller-logger/src/*"]
    }
  },
  "include": ["libs/codekoller-logger/src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
